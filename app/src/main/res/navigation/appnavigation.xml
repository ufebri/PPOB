<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appnavigation"
    app:startDestination="@+id/authmodeFragment">

    <fragment
        android:id="@+id/authmodeFragment"
        android:name="febri.uray.bedboy.ppob.presentations.authmode.AuthModeFragment"
        android:label="Auth Mode"
        tools:layout="@layout/content_authmode_fragment">

        <action
            android:id="@+id/action_authMode_to_home"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="febri.uray.bedboy.ppob.presentations.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/content_home_fragment" />

</navigation>