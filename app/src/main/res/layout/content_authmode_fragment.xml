<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_titleAuthMode"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:text="@string/title_service_authmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        app:layout_constraintEnd_toEndOf="@id/tv_titleAuthMode"
        app:layout_constraintStart_toStartOf="@id/tv_titleAuthMode"
        app:layout_constraintTop_toBottomOf="@id/tv_titleAuthMode" />

    <febri.uray.bedboy.uicomponent.InputLayout.TextInputLayoutCustom
        android:id="@+id/til_services"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:visibility="gone"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorPrimaryDark"
        app:helperTextEnabled="true"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="@id/rg_services"
        app:layout_constraintStart_toStartOf="@id/rg_services"
        app:layout_constraintTop_toBottomOf="@id/rg_services"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_white_background_unfocused_shape"
            android:hint="@string/hint_api_key"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:maxLength="30"
            android:padding="@dimen/dimens_16dp"
            tools:text="@tools:sample/lorem/random" />
    </febri.uray.bedboy.uicomponent.InputLayout.TextInputLayoutCustom>

    <febri.uray.bedboy.uicomponent.InputLayout.TextInputLayoutCustom
        android:id="@+id/til_username"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:visibility="gone"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorPrimaryDark"
        app:helperTextEnabled="true"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="@id/til_services"
        app:layout_constraintStart_toStartOf="@id/til_services"
        app:layout_constraintTop_toBottomOf="@id/til_services"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_white_background_unfocused_shape"
            android:hint="@string/text_username"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:maxLength="30"
            android:padding="@dimen/dimens_16dp"
            tools:text="@tools:sample/lorem/random" />
    </febri.uray.bedboy.uicomponent.InputLayout.TextInputLayoutCustom>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dimens_16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/btn_submit"
        app:layout_constraintStart_toStartOf="@id/btn_submit"
        app:layout_constraintTop_toBottomOf="@id/btn_submit"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/buttonGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:enabled="false"
        android:text="@string/button_submit_text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/til_username"
        app:layout_constraintStart_toStartOf="@id/til_username"
        app:layout_constraintTop_toBottomOf="@id/til_username"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>